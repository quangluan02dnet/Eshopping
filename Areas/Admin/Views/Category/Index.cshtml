@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Category Listed";
}

<h1>List Category</h1>
<a asp-action="Add" asp-controller="Category">Add category</a>
<table class="table" style="margin-top: 50px">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col" width="200px">Category Name</th>
            <th scope="col" width="400px">Description</th>
            <th scope="col">Slug</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Slug</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Remove" asp-controller="Category" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }       
    </tbody>
</table>
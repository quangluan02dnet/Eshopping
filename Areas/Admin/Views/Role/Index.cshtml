@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "Role Listed";
}
<h1>List Role</h1>
<a asp-action="Add" asp-controller="Role">Add role</a>
<table class="table" style="margin-top: 50px">
    <thead>
        <tr>

            <th scope="col" width="400px">Role Id</th>
            <th scope="col" width="200px">Role</th>
            <th scope="col" width="400px">Concurrency Stamp</th>
            <th scope="col" width="200px">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.ConcurrencyStamp</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Remove" asp-controller="Role" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@model IEnumerable<AppUserModel>
@{
    ViewData["title"] = "User Listed";
}

<h1>List user</h1>
<a asp-action="Add">Add user</a>
<table class="table" style="margin-top: 50px">
    <thead>
        <tr>
            <th scope="col" >ID</th>
            <th scope="col">User Name</th>
            <th scope="col">Email</th>
            <th scope="col">PhoneNumber</th>
            <th scope="col">Role</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Role.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Remove" asp-controller="User" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }       
    </tbody>
</table>
@model AppUserModel
@{
    ViewData["title"] = "Update user";
}
<h4>Update user</h4>
<div class="col-md-8">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>

        <div class="form-group">
            <lable>UserName</lable>
            <input asp-for="UserName" required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger" />
        </div>

        <div class="form-group">
            <lable>Email</lable>
            <input asp-for="Email" required class="form-control" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>PhoneNumber</lable>
            <input asp-for="PhoneNumber" required class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Password</lable>
            <input asp-for="PasswordHash" readonly required class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger" />
        </div>

        <div class="form-group">
            <lable>Role</lable>
            <select asp-for="RoleId" required class="form-control" asp-items="ViewBag.Roles">
            </select>
            <span asp-validation-for="RoleId" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Update</button>
        </div>
    </form>
    <a asp-action="Index">Back to List User</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}